<h1>Listing Cars</h1>
 
<table>
  <tr>
    <th>ID</th>
    <th>Name</th>
    <th></th>
  </tr>
 
  <% @cars.each do |car| %>
    <tr>
      <td><%= car.id %></td>
      <td><%= car.name %></td>
      <td><%= link_to 'Show', car_path(car) %></td>
      <td><%= link_to 'Edit', edit_car_path(car) %></td>
       <td><%= link_to 'Destroy', car_path(car), method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
    </tr>
  <% end %>
</table>

<%= link_to 'New car', new_car_path %>